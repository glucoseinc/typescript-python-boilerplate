{
  "name": "typescript-python-boilerplate",
  "version": "0.0.1",
  "repository": "https://github.com/glucoseinc/typescript-python-boilerplate",
  "author": "shn@glucose.jp",
  "license": "MIT",
  "scripts": {
    "build": "webpack --mode production",
    "lint": "tslint -p .",
    "format": "prettier 'src/**/*.{ts,tsx}' --write && tslint --fix -p .",
    "storybook": "start-storybook -p 6003",
    "test": "jest -w 4 --coverage",
    "watch": "webpack --watch --mode development"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "classnames": "^2.2.6",
    "react": "^16.6.3",
    "react-dom": "^16.6.3"
  },
  "browserslist": [
    "last 2 versions",
    "ios >= 10",
    "android >= 5.0"
  ],
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/preset-env": "^7.1.6",
    "@storybook/addon-actions": "^4.0.11",
    "@storybook/addon-links": "^4.0.11",
    "@storybook/addons": "^4.0.11",
    "@storybook/cli": "^4.0.11",
    "@storybook/react": "^4.0.11",
    "@types/classnames": "^2.2.6",
    "@types/enzyme": "^3.1.15",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.10",
    "@types/react": "^16.7.11",
    "@types/react-dom": "^16.0.11",
    "@types/storybook__addon-actions": "^3.4.1",
    "@types/storybook__addon-links": "^3.3.3",
    "@types/storybook__react": "^4.0.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.2",
    "css-loader": "^2.1.0",
    "cssnano": "^4.1.0",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "jest": "^23.6.0",
    "jest-fetch-mock": "^2.0.1",
    "prettier": "^1.15.3",
    "style-loader": "^0.23.0",
    "stylelint": "^9.9.0",
    "stylelint-config-standard": "^18.2.0",
    "svg-react-loader": "^0.4.5",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1",
    "webpack": "^4.17.1",
    "webpack-clean-obsolete-chunks": "^0.4.0",
    "webpack-cli": "^3.1.0",
    "webpack-manifest-plugin": "^2.0.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/jest.setup.ts",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{ts,tsx}",
      "!src/**/index.{ts,tsx}"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "moduleNameMapper": {
      "^@src/(.+)": "<rootDir>/src/$1",
      "\\.(svg)$": "<rootDir>/src/__mocks__/Null.tsx"
    },
    "setupFiles": [
      "./src/jest.setup.ts"
    ],
    "testRegex": "/__tests__/.+.test\\.tsx?$",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "prettier": {
    "bracketSpacing": false,
    "semi": false,
    "singleQuote": true
  }
}
